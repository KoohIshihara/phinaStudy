atom-modal-h2
  div.wrap-h2
    h2 {opts.h2_str}

  style(scoped, type='less').
    :scope {
      display: flex;
      justify-content: center;
      margin-top: 32px;
      h2 {
        font-size: 24px;
        display: inline;
        text-align: center;
        border-color: #4A4A4A;
        border-bottom: solid;
        border-width: 2px;
      }
    }