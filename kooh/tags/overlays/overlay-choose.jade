overlay-choose
  div.wrap.f.fh
    div.wrap-choose.f.flex-between
      img(src='./assets/icon-sound-on.svg').sound-on#letSound
      div.f.fh
        span.which Which?
      img(src='./assets/icon-sound-off.svg' onclick='{soundOff}').sound-off


  style(scoped, type='less').
    :scope {
      z-index: 1000;
      position: fixed;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      .wrap {
        position: relative;
        width: 100%;
        height: 100%;
        .wrap-choose {
          width: 260px;
          height: 100px;
          img {
            width: 60px;
            cursor: pointer;
          }
          span {
            font-size: 18px;
          }
        }
      }
    }

  script.
    // soundOnの処理はsound.jsにあるよ
    
    this.soundOff = function() {
      $('.which').text('OK!');
      $('.sound-on').animate({opacity: 0.0}, 1000);
      $('overlay-choose').delay(1000).fadeToggle('slow', 'linear');
      setTimeout(function(){
        GLOBAL.choosedSound = true;
      }, 2000);
    }